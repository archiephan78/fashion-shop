extends layout/layout

block var
  - scriptpage = "home";
  - subPage = "product-detail";
  - title = "Product Detail";

block content
  .preview-block.clearfix
    .product-preview.col-md-4
      .big-image
        a.elevatezoom(href='#')
          img.zoom.fancybox.img-respnsive(src='images/small/n14d0663px-4.jpg', data-zoom-image='images/large/n14d0663px-4.jpg')
      +carouselProduct(['n14d0663px-4', 'n14d0663px-2', 'n14d0663px-4', 'n14d0663px-6', 'n14d0663px-7'])
      
    .product-details.col-md-8
      .entry-header.clearfix
        h3 One Shoulder Asymmetric Dress
        .print-block
          i.fa.fa-print.margin-r-10
          +a("Print this page", "") 
      article.entry-content
        .rate-bar
          .rateit-selected
        span.entry-review-count (14 Votes) 
        span  15 orders
        ul.info-details
          li
            span Price
            del.value.original-price $59.80
          li
            span Discount Price
            | $39.80
            span.discount 30% off
          li
            span Brand
            | Versace
          li
            span Availability
            | In Stock
          li
            span Product Code
            | GF-123456
          li.colors
            span Color
            +radio('color', ['white', 'silver', 'black', 'green', 'yellow', 'pink', 'tomato', 'purple', 'pattern'])
          li.sizes
            span Size
            +radio('size', ['XS', 'S', 'M', 'L', 'XL', 'XLL', 'XLLL'])
          li
            span Quantity
            input(type='number', value='1')
        .row.flex.ad-block
          .col-md-6
            .buy-protection-block.clearfix
              img.pull-left(src='images/shield-icon.png', alt='', style='')
              h3 Buyer Protection
              .buy-protection-info
                ul.list-unstyled
                  li
                    i.fa.fa-check
                    strong Full Refund
                    |  if you don't receive your order
                  li
                    i.fa.fa-check
                    strong Refund or Keep
                    |   items not as described
        .button-group
          a.btn-cta(href='#')
            i.fa.fa-shopping-cart
            |  ADD TO CARD
          a.btn-outline(href='#', title='Add to Wishlist')
            i.fa.fa-heart
          a.btn-outline(href='#', title='Add to Comapre')
            i.fa.fa-retweet
