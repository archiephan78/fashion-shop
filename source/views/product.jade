mixin breadcrumb(objs, lastitem)
  ol.col-md-9.hasebz_breadcrumb
    each item in objs.items
      li
        a(href=item[1], title=item[0])!=item[0]
    li.active!=lastitem
+breadcrumb({"items":[["Home", "index.html"]]}, "Product")
mixin filterSize(arr)
  ul.list-unstyled
    each item in arr
      li: a.round-icon(href='javascript:void(0)') #{item}
mixin filterColor(arr)
  ul.list-unstyled
    each item in arr
      li: a.round-icon.color-box(href='javascript:void(0)', class=item)
