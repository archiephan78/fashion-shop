//- extends layout to your side
extends layout/layout
mixin blog-item(img, title, author, comment, date, content)
  // Begin blog list
  .blog-content.clearfix
    .blog-img.col-md-3.col-sm-4.col-xs-12
      a(href='')
        img(src='images/#{img}.jpg', alt=title).img-responsive
        span.thumbnail-arrow
          i.fa.fa-search-plus
    .blog-detail.col-md-9.col-sm-8.col-xs-12
      h4= title
      .blog-action.clearfix
        ul.list-inline
          li
            i.fa.fa-user 
            | by #{author}
          li
            i.fa.fa-comments 
            | #{comment} Comments
          li
            i.fa.fa-clock-o
            | #{date}
      p!= content
      +a("Read more", "").btn-cta
  // blog list
block var
  - scriptpage = "home";
  - subPage = "blog-page";
  - title = "Blog page";
block breadcrumb
  +breadcrumb([["Home", "index.html"],["Blog", ""]], "New collections")
